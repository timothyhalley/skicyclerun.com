# SkiCycleRun.com Environment Variables
# Copy this file to .env and fill in your actual values

# Site Configuration
# SITE_URL influences sitemap and canonical tags during build/preview
SKICYCLERUN_URL=https://localhost:4321
PUBLIC_SKICYCLERUN_API=https://api.skicyclerun.com/v2/

# Cognito Configuration (PUBLIC_ prefix for client-side access)
# These are exposed to the browser - that's intentional and safe
PUBLIC_COGNITO_USER_POOL_ID=your_user_pool_id_here
PUBLIC_COGNITO_CLIENT_ID=your_client_id_here
PUBLIC_COGNITO_DOMAIN=your-cognito-domain.auth.region.amazoncognito.com
PUBLIC_COGNITO_REGION=us-west-2
PUBLIC_COGNITO_SCOPES=openid,email,profile,phone
PUBLIC_COGNITO_REDIRECT_URI=/
PUBLIC_COGNITO_LOGOUT_URI=/
# Ordered list of sign-in options (comma separated). Supported values: PASSWORD, EMAIL_OTP, SMS_OTP
PUBLIC_AUTH_METHODS=EMAIL_OTP,SMS_OTP,PASSWORD
# Optional: override expected OTP code length (4-8). Default mirrors Cognito.
# PUBLIC_COGNITO_DEFAULT_OTP_LENGTH=8

# Debug Output Configuration
# Set to 'true' to enable console logging (localhost default)
# Set to 'false' for production (silences all DebugConsole output)
# Override in GitHub Actions via DEBUG_OUTPUT secret
PUBLIC_DEBUG_OUTPUT=true

# AWS Deployment Configuration (used by GitHub Actions to publish the site)
# These values stay server-side and are injected into the deploy workflow for:
# - `aws s3 sync` to push the built site to the static hosting bucket
# - `aws cloudfront create-invalidation` to clear the CDN cache after deploys
# Never add PUBLIC_ prefixes to these credentials or identifiers.
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_NAME=your_bucket_name
CLOUDFRONT_DISTRIBUTION_ID=your_distribution_id

# Security Note:
# - PUBLIC_ variables are exposed to the browser (intentional for auth)
# - Never add PUBLIC_ prefix to AWS credentials or secrets
# - Cognito User Pool ID and Client ID are public (visible in browser)
# - The actual secret is the User Pool Client Secret (not used in this app)
