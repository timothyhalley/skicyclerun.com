{
  "include": [
    ".astro/types.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro",
    "src/types/**/*.d.ts",
    "*.d.ts",
    "scripts/update-version.ts"
  ],
  "exclude": ["dist", "node_modules", "src/scripts/**/*.js"],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "6.0",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "skicyclerun.config": ["src/skicyclerun.config.ts"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@constants/*": ["src/constants/*"],
      "@content/*": ["src/content/*"],
      "@images/*": ["src/assets/images/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@locales/*": ["src/locales/*"],
      "@pages/*": ["src/pages/*"],
      "@scripts/*": ["src/scripts/*"],
      "@skicyclerun.config": ["src/skicyclerun.config.ts"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@svg_imgs/*": ["src/assets/svg_imgs/*"],
      "@version": ["version.json"]
    }
  }
}
