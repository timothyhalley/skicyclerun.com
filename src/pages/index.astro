---
import { getCollection } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/Header.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import PostCard from "@components/PostCards.astro";
import getSortedPosts from "@utils/getSortedPosts";
import { SkiCycleRunConfig } from "skicyclerun.config";
import { getPhotoCover } from "@utils/getPhotoCover";

import MtnTops from "@svg_imgs/mtntops.svg";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(
  ({ data }: { data: any }) => data.featured
);
const recentPosts = sortedPosts.filter(
  ({ data }: { data: any }) => !data.featured
);

// Resolve cover images for featured posts
const featuredCoverImages = await Promise.all(
  featuredPosts.map((post) => getPhotoCover(post.data.cover ?? null))
);

const socialCount = SkiCycleRunConfig.socials.filter(
  (social) => social.active
).length;
---

<BaseLayout>
  <Header />
  <main id="main-content">
    <section id="hero">
      <div class="hero-visual">
        <MtnTops class="hero-img" aria-label="top of the mtn" />
        <h1 class="hero-title">Adventum</h1>
      </div>
      <p>
        üåç Travels & Terrain. Photos from the mountains to urban cities. A few
        moments caught & sites explored worth sharing. üéøüö¥‚Äç‚ôÄÔ∏èü•æ
      </p>
      <p>
        üî¨ Including topics of interest regarding technology, coding and the
        latest in AI areas ‚ú® and research. üíªüî≠
      </p>
      <p class="my-50 m-20">
        This project tech-stack is based on Astro.Build. Details as well as
        setup and configuration can be found in the
        <LinkButton
          className="underline decoration-dashed underline-offset-4 hover:text-skin-accent"
          href="/posts/project-guide"
        >
          PROJECT SETUP GUIDE
        </LinkButton>
      </p>
    </section>

    <div class="my-2">
      <Hr />
    </div>

    {
      featuredPosts.length > 0 && (
        <>
          <section
            id="featured"
            class="max-w-screen-lg mx-auto w-full px-4 mt-8"
          >
            <h2 class="mb-6 text-2xl md:text-3xl font-bold">Featured Topics</h2>
            <div class="flex flex-col gap-6">
              {featuredPosts.map((post, index) => (
                <PostCard
                  title={post.data.title}
                  author={post.data.author}
                  pubDatetime={post.data.pubDatetime.toISOString()}
                  tags={post.data.tags}
                  description={post.data.description}
                  cover={featuredCoverImages[index]}
                  href={
                    post.data.type === "TECH" || post.data.type === "BETA"
                      ? `/tech/${post.slug}`
                      : `/posts/${post.slug}`
                  }
                />
              ))}
            </div>
          </section>
          {recentPosts.length > 0 && <div class="my-4" />}
        </>
      )
    }
    <div class="all-posts-btn-wrapper">
      <LinkButton href="/posts">
        All Posts <svg
          xmlns="http://www.w3.org/2000/svg"
          style="display: inline-block; vertical-align: middle; margin-left: 2px;"
          ><path
            d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
          ></path></svg
        >
      </LinkButton>
    </div>
  </main>
</BaseLayout>

<style>
  /* ===== Hero Section ===== */
  #hero {
    padding-top: 0; /* bring content tight to the header hr */
    padding-bottom: 1rem;
    max-width: 64rem; /* center the hero content */
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem; /* keep content off the edges */
    padding-right: 1rem;
    /* Reduced spacing between hero and next section */
    margin-bottom: 20px;
  }
  .hero-visual {
    position: relative;
    text-align: center; /* ensure inner content is centered */
  }
  .hero-img {
    display: block;
    width: 100%;
    height: auto;
    margin: 0 auto; /* always center the SVG/image */
  }
  .hero-title {
    position: absolute;
    top: 38%; /* lower the title a bit more over the image */
    left: 50%;
    transform: translateX(-50%);
    margin: 0;
    text-align: center;
    font-size: 4rem; /* doubled size on mobile */
    font-weight: 800;
    line-height: 1.1;
    color: var(--color-skin-inverted);
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.35);
  }
  @media (min-width: 640px) {
    .hero-title {
      font-size: 6rem; /* doubled size on sm+ */
    }
  }
  /* Light mode: move title to 20% from top and left-align at 15% (stable across breakpoints) */
  :global(html[data-theme="light"]) .hero-title {
    top: 20%;
    left: 15%;
    transform: none;
    text-align: left;
    /* reduce size by ~33% from base */
    font-size: calc(4rem * 0.67);
    /* remove gradient/card backdrop for a cleaner overlay */
    background: none;
    padding: 0;
    border-radius: 0;
    box-shadow: none;
  }
  @media (min-width: 640px) {
    :global(html[data-theme="light"]) .hero-title {
      /* reduce size by ~33% from sm+ base */
      font-size: 4rem; /* ~6rem * 0.67 ‚âà 4.02rem */
      /* keep the same position to avoid jarring movement */
    }
  }
  /* Paragraphs under the image: comfortable line length and side margins */
  #hero p {
    max-width: 65ch;
    margin-left: auto;
    margin-right: auto;
    padding-left: 0.5rem;
    padding-right: 0.5rem;
  }
  #hero .rss-link {
    margin-bottom: 1.5rem;
  }
  #hero .rss-icon {
    margin-bottom: 0.5rem;
    height: 1.5rem;
    width: 1.5rem;
    transform: scale(1.1);
    fill: var(--color-skin-accent);
  }
  @media (min-width: 640px) {
    #hero .rss-icon {
      margin-bottom: 0.75rem;
      transform: scale(1.25);
    }
  }
  #hero p {
    margin-top: 0.25rem; /* reduced by 50% */
    margin-bottom: 0.25rem; /* reduced by 50% */
  }
  .social-wrapper {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    /* Responsive: sm:flex-row, sm:items-center */
  }
  @media (min-width: 640px) {
    .social-wrapper {
      flex-direction: row;
      align-items: center;
    }
  }
  .social-links {
    margin-bottom: 0.25rem;
    margin-right: 0.5rem;
    white-space: nowrap;
  }
  @media (min-width: 640px) {
    .social-links {
      margin-bottom: 0;
    }
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts {
    padding-bottom: 1rem;
    padding-top: 1.5rem;
    max-width: 64rem;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }
  /* Explicit vertical rhythm: hero bottom margin already 100px; keep sections flush after that */
  #featured {
    margin-top: 0;
  }
  #recent-posts {
    margin-top: 1rem;
  }
  #featured h2,
  #recent-posts h2 {
    margin-left: 0; /* rely on section padding */
    margin-right: 0;
    margin-bottom: 0.75rem;
  }
  #featured h2,
  #recent-posts h2 {
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: 0.025em;
  }
  .all-posts-btn-wrapper {
    margin-top: 1rem;
    margin-bottom: 1rem;
    text-align: center;
  }
</style>
