---
import { getCollection } from "astro:content";
import Tech from "@layouts/Tech.astro";
import getSortedTech from "@utils/getSortedTech";
import getPagination from "@utils/getPagination";

const tech = await getCollection("tech");

// console.log("[DEBUG] src > pages > tech > index.astro: ", tech);

const sortedPosts = getSortedTech(tech);

// console.log("[DEBUG] src > pages > tech > index.astro: SORTED\n", sortedPosts);

const pagination = getPagination({
  posts: sortedPosts,
  page: 1,
  isIndex: true,
});
---

<Tech {...pagination} />
