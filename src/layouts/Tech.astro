---
import type { CollectionEntry } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Pagination from "@components/Pagination.astro";
import Card from "@components/Card";
import { SkiCycleRunConfig } from "skicyclerun.config";

export interface Props {
  currentPage: number;
  totalPages: number;
  paginatedPosts: CollectionEntry<"tech">[];
}

// console.log("[DEBUG] src > layouts > AITech.astro: PROPS\n", Astro.props);

const { currentPage, totalPages, paginatedPosts } = Astro.props;
---

<Layout title={`AI Tech | ${SkiCycleRunConfig.title}`}>
  <Header activeNav="AI Tech" />
  <Main
    pageTitle="AI Tech"
    pageDesc="Exploring the frontiers of AI and emerging innovations."
  >
    <ul>
      {
        paginatedPosts.map(({ data, slug }) => (
          <Card href={`/tech/${slug}`} frontmatter={data} />
        ))
      }
    </ul>
  </Main>
  <Pagination
    {currentPage}
    {totalPages}
    prevUrl={`/tech${currentPage - 1 !== 1 ? "/" + (currentPage - 1) : ""}`}
    nextUrl={`/tech/${currentPage + 1}`}
  />

  <Footer noMarginTop={totalPages > 1} />
</Layout>
