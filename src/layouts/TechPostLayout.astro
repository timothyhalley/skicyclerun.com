---
const { frontmatter } = Astro.props;
const { title, description, author } = frontmatter;
---

<!-- Title and Description (matches PostDetails.astro structure) -->
<div class="header-wrapper">
  {
    title && (
      <h1 class="text-4xl font-extrabold text-skin-accent mb-4">{title}</h1>
    )
  }
  {
    description && (
      <p class="text-lg text-skin-base leading-relaxed mt-4">{description}</p>
    )
  }
</div>

<!-- Article content -->
<div class="article-wrapper">
  <article id="article" role="article" class="prose mt-8">
    <slot />
  </article>
</div>

<!-- Author attribution -->
{
  author && (
    <div class="author-wrapper">
      <div class="author-attribution">• {author} •</div>
    </div>
  )
}

<style>
  .header-wrapper {
    max-width: 1024px;
    margin: 0 auto;
    width: 100%;
    padding-left: 1rem;
    padding-right: 1rem;
    margin-top: 1rem;
  }

  /* Title styling moved to Tailwind utilities on the element to avoid scoped CSS specificity conflicts */

  .article-wrapper {
    max-width: 1024px;
    margin: 0 auto;
    width: 100%;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .article-wrapper .prose {
    max-width: 100%;
  }

  .author-wrapper {
    max-width: 1024px;
    margin: 0.5rem auto 0;
    width: 100%;
    text-align: right;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .author-attribution {
    font-size: 0.875rem;
    color: #9ca3af;
  }

  :global(.dark) .author-attribution {
    color: #6b7280;
  }
</style>
