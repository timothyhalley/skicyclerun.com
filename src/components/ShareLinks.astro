---
import LinkButton from "./LinkButton.astro";
import socialIcons from "@assets/socialIcons";

const URL = encodeURIComponent(Astro.url.toString());

const shareLinks = [
  {
    name: "LinkedIn",
    href: "https://www.linkedin.com/sharing/share-offsite/?url=",
    linkTitle: `Share this post via LinkedIn`,
  },
  {
    name: "WhatsApp",
    href: "https://wa.me/?text=",
    linkTitle: `Share this post via WhatsApp`,
  },
  {
    name: "Facebook",
    href: "https://www.facebook.com/sharer.php?u=",
    linkTitle: `Share this post on Facebook`,
  },
  {
    name: "Twitter",
    href: "https://twitter.com/intent/tweet?url=",
    linkTitle: `Tweet this post`,
  },
  {
    name: "Telegram",
    href: "https://t.me/share/url?url=",
    linkTitle: `Share this post via Telegram`,
  },
  {
    name: "Mail",
    href: "mailto:?subject=See%20this%20post&body=",
    linkTitle: `Share this post via email`,
  },
] as const;
---

<div class={`social-icons`}>
  <span class="italic">Share this post on:</span>
  <div class="text-center">
    {
      shareLinks.map((social) => (
        <LinkButton
          href={`${social.href + URL}`}
          className="link-button"
          title={social.linkTitle}
        >
          <span aria-hidden="true" set:html={socialIcons[social.name]} />
          <span class="sr-only">{social.linkTitle}</span>
        </LinkButton>
      ))
    }
  </div>
</div>

<style>
  .social-icons {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
  }
  @media (min-width: 640px) {
    .social-icons {
      align-items: flex-start;
    }
  }
  .link-button {
    transform: scale(0.9);
    padding: 0.5rem;
  }
  .link-button:hover {
    transform: rotate(6deg) scale(0.9);
  }
  @media (min-width: 640px) {
    .link-button {
      padding: 0.25rem;
    }
  }
</style>
