---
// This component is a "dumb" container. All logic is handled by the main auth script.
import blockedStopSvg from '@svg_imgs/blocked-stop.svg';
---

<div class='auth-gate-container'>
  <!-- 1. Loading State -->
  <div id='auth-loading-message' class='message-box'>
    <svg
      aria-hidden='true'
      class='text-skin-muted inline h-8 w-8 animate-spin fill-skin-accent'
      viewBox='0 0 100 101'
      fill='none'
      xmlns='http://www.w3.org/2000/svg'
    >
      <path
        d='M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z'
        fill='currentColor'></path>
      <path
        d='M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0492C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z'
        fill='currentFill'></path>
    </svg>
    <span class='sr-only'>Loading...</span>
  </div>

  <!-- 2. Unauthenticated State -->
  <div id='auth-required-message' class='auth-state'>
    <div class='message-box' style={`background-image: url(${blockedStopSvg.src})`}>
      <div class='text-backdrop'>
        <h2 class='text-2xl font-semibold'>Authentication Required</h2>
        <p class='my-4'>
          Please use the login button in the header to sign in and view this content.
        </p>
      </div>
    </div>
  </div>

  <!-- 3. Authenticated State (The real content) -->
  <div id='protected-content' class='auth-state'>
    <slot />
  </div>
</div>

<style>
  .auth-gate-container {
    min-height: 60vh; /* Ensures the container pushes the footer down */
  }
  .message-box {
    @apply mx-auto mt-8 flex h-full min-h-[50vh] max-w-lg flex-col items-center justify-center rounded p-8 text-center;
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
  }
  .text-backdrop {
    @apply rounded-lg bg-skin-card-muted/80 p-6 backdrop-blur-sm;
  }

  /* Styles for smooth transitions */
  .auth-state {
    @apply opacity-0 transition-opacity duration-500 ease-in-out;
  }
  .auth-state.visible {
    @apply opacity-100;
  }
</style>

<script>
  async function updateAuthGate() {
    const loading = document.getElementById('auth-loading-message');
    const unauth = document.getElementById('auth-required-message');
    const content = document.getElementById('protected-content');

    if (!loading || !unauth || !content) return;

    try {
      const res = await fetch('/api/auth/session', { credentials: 'include' });
      const data = await res.json().catch(() => ({}));
      const signedIn = !!data?.signedIn;

      // Hide loader
      loading.style.display = 'none';

      // Toggle states
      if (signedIn) {
        unauth.classList.remove('visible');
        content.classList.add('visible');
      } else {
        content.classList.remove('visible');
        unauth.classList.add('visible');
      }
    } catch {
      // On error, default to unauthenticated state
      loading.style.display = 'none';
      content.classList.remove('visible');
      unauth.classList.add('visible');
    }
  }

  document.addEventListener('astro:page-load', updateAuthGate);
  document.addEventListener('astro:after-swap', updateAuthGate);
</script>
