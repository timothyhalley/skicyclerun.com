---
export interface Props {
  activeNav?:
    | "home"
    | "posts"
    | "travel"
    | "tech"
    | "tags"
    | "about"
    | "search";
}

const { activeNav } = Astro.props;
---

<ul class="primary-links" id="primary-links" aria-hidden="true">
  <li>
    <a
      href="/posts"
      class={`focus-outline px-3 py-2 text-skin-base ${activeNav === "posts" ? "active" : ""}`}
      title="Posts"
    >
      Posts
    </a>
  </li>
  <li>
    <a
      href="/travel-globe"
      class={`focus-outline px-3 py-2 text-skin-base ${activeNav === "travel" ? "active" : ""}`}
      title="Travel"
    >
      Travel
    </a>
  </li>
  <li>
    <a
      href="/tech"
      class={`focus-outline px-3 py-2 text-skin-base ${activeNav === "tech" ? "active" : ""}`}
      title="Tech"
    >
      Tech
    </a>
  </li>
  <li>
    <a
      href="/tags"
      class={`focus-outline px-3 py-2 text-skin-base ${activeNav === "tags" ? "active" : ""}`}
      title="Tags"
    >
      Tags
    </a>
  </li>
  <li>
    <a
      href="/about"
      class={`focus-outline px-3 py-2 text-skin-base ${activeNav === "about" ? "active" : ""}`}
      title="About"
    >
      About
    </a>
  </li>
</ul>

<style>
  .primary-links a {
    display: inline-flex;
    align-items: center;
    font-size: 0.95rem;
    line-height: 1.3;
    font-weight: 600;
    white-space: nowrap;
    transition:
      color 0.3s ease,
      transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .primary-links a:hover {
    transform: translateY(-2px);
  }

  .primary-links a.active {
    text-decoration: underline wavy;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
  }
</style>
