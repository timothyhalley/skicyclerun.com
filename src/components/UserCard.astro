---
// src/components/UserCard.astro
const { name, email, phone, geo, groups } = Astro.props;
import EasterIslandStatue from "@svg_imgs/EasterIslandStatue.svg";
---

<div
  class="flex gap-6 items-start bg-white dark:bg-gray-800 p-6 rounded-lg shadow"
>
  <div
    class="w-24 h-24 rounded-full overflow-hidden bg-gray-100 dark:bg-gray-700 flex items-center justify-center"
  >
    <EasterIslandStatue class="w-20 h-20 text-gray-500 dark:text-gray-300" />
  </div>
  <div class="flex-1 space-y-2">
    <table class="w-full text-sm text-left">
      <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
        <tr><th>Name</th><td>{name}</td></tr>
        <tr><th>Email</th><td>{email}</td></tr>
        <tr><th>Phone</th><td>{phone || "—"}</td></tr>
        <tr><th>Geo</th><td>{geo || "—"}</td></tr>
      </tbody>
    </table>
    <div class="mt-2 flex flex-wrap gap-2">
      {
        groups.map((group) => (
          <span class="px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800">
            {group}
          </span>
        ))
      }
    </div>
  </div>
</div>
