---
// Component imports
import NavigationLinks from "./NavigationLinks.astro";
import SearchButton from "./SearchButton.astro";
import ThemeToggle from "./ThemeToggle.astro";
import AuthButton from "./AuthButton.astro";
import HamburgerMenu from "./HamburgerMenu.astro";
import Hr from "./Hr.astro";

// Config import
import { SkiCycleRunConfig } from "../skicyclerun.config.ts";

export interface Props {
  activeNav?:
    | "home"
    | "posts"
    | "travel"
    | "tech"
    | "tags"
    | "about"
    | "search";
}

const { activeNav } = Astro.props;
---

<header>
  <a id="skip-to-content" href="#main-content">Skip to content</a>
  <div class="header-wrapper">
    <div class="nav-container sm:flex-row">
      <div class="top-nav-wrap">
        <a href="/" class="logo whitespace-nowrap" aria-label="Home">
          {
            SkiCycleRunConfig.logoImage.enable ? (
              <img
                src={`/${SkiCycleRunConfig.logoImage.svg ? "SkiCycleRun.svg" : "SkiCycleRun.png"}`}
                alt={SkiCycleRunConfig.title}
                width={SkiCycleRunConfig.logoImage.width}
                height={SkiCycleRunConfig.logoImage.height}
              />
            ) : (
              SkiCycleRunConfig.title
            )
          }
        </a>
        <nav id="nav-menu" class="flex-1 flex items-center justify-start">
          <div id="menu-wrapper">
            <NavigationLinks activeNav={activeNav} />

            <ul class="actions">
              <SearchButton />
              <ThemeToggle enabled={SkiCycleRunConfig.lightAndDarkMode} />
              <AuthButton enabled={SkiCycleRunConfig.loginAndLogout} />
            </ul>
          </div>
          <HamburgerMenu />
        </nav>
      </div>
    </div>
  </div>
  <Hr noPadding={true} marginY="my-0" />
</header>

<style is:global>
  /* Header component styles */
  header {
    position: relative;
    z-index: 1000;
  }

  .header-wrapper {
    max-width: 1024px;
    margin: 0 auto;
    width: 100%;
  }

  #skip-to-content {
    position: absolute;
    top: -100%;
    left: 4rem;
    z-index: 50;
    background-color: var(--color-skin-accent);
    padding-left: 0.75rem;
    padding-right: 0.75rem;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    color: var(--color-skin-inverted);
    transition: all 0.2s;
  }

  #skip-to-content:focus {
    top: 1rem;
  }

  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-left: 1rem;
    padding-right: 1rem;
    overflow: visible;
  }

  .top-nav-wrap {
    position: relative;
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: space-between;
    overflow: visible;
  }

  .logo {
    display: inline-flex;
    align-items: center;
    margin-right: 2rem;
  }

  .logo img {
    height: 2rem;
    width: auto;
    display: block;
  }

  .logo:where(:not(:has(img))) {
    font-size: 1.25rem;
    line-height: 1.1;
    font-weight: 700;
    letter-spacing: 0.2px;
    white-space: nowrap;
    color: rgb(var(--color-text-base)); /* Use theme-aware text color */
    transition:
      color 0.3s ease,
      transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .logo:where(:not(:has(img))):hover {
    color: rgb(var(--color-accent));
    transform: translateY(-2px) scale(1.02);
  }

  nav {
    display: flex;
    align-items: center;
    width: 100%;
  }

  nav ul {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 0.375rem;
    width: auto;
    align-items: center;
    justify-content: flex-start;
  }

  #menu-wrapper {
    display: flex;
    align-items: center;
    width: 100%;
    gap: 1rem;
    position: relative;
    overflow: visible;
  }

  #menu-wrapper .primary-links {
    justify-content: center;
    min-width: 0;
    flex: 1 1 auto;
    flex-wrap: nowrap;
  }

  #menu-wrapper .actions {
    justify-content: flex-end;
    padding-right: 0.75rem;
    flex: 0 0 auto;
    flex-wrap: nowrap;
  }

  #menu-wrapper ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    min-width: 0;
  }

  .actions svg {
    height: 1.5rem;
    width: 1.5rem;
    fill: currentColor;
    stroke-width: 2.2;
    transition:
      fill 0.3s ease,
      stroke 0.3s ease,
      transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275),
      stroke-width 0.3s ease;
  }

  .actions {
    overflow: visible;
  }
  .actions li {
    flex: 0 0 auto;
    position: relative;
  }

  .actions a.active svg {
    fill: var(--color-skin-accent);
  }

  .actions a:hover,
  .actions button:hover {
    transform: translateY(-3px);
  }

  .actions a:hover svg,
  .actions button:hover svg {
    fill: rgb(var(--color-accent));
    transform: rotate(8deg) scale(1.05);
    stroke-width: 2.5;
  }

  nav ul li {
    display: flex;
    align-items: center;
    justify-content: center;
    width: auto;
  }

  nav ul li a {
    width: auto;
    padding-left: 1rem;
    padding-right: 1rem;
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
    text-align: center;
    font-weight: 500;
  }

  /* Mobile styles */
  @media (max-width: 639px) {
    #menu-wrapper {
      display: flex;
      align-items: center;
      width: 100%;
      gap: 0.5rem;
      position: static;
    }

    #menu-wrapper .actions {
      justify-content: flex-end;
      padding-right: 0;
      margin-left: auto;
    }

    #primary-links {
      position: absolute;
      left: 0;
      right: 0;
      top: 100%;
      z-index: 9999;
      margin-top: 0;
      display: flex;
      width: 100%;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      gap: 0.25rem;
      background-color: var(--color-skin-fill);
      padding-left: 1rem;
      padding-right: 1rem;
      padding-top: 0.5rem;
      padding-bottom: 0.5rem;
      border-top: 1px solid var(--color-skin-line, rgba(0, 0, 0, 0.08));
      border-bottom: 1px solid var(--color-skin-line, rgba(0, 0, 0, 0.08));
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
      -webkit-backdrop-filter: saturate(150%) blur(6px);
      backdrop-filter: saturate(150%) blur(6px);
      opacity: 0;
      transform: translateY(-6px) scale(0.98);
      pointer-events: none;
      visibility: hidden;
      overflow-x: auto;
      overflow-y: hidden;
      transition:
        opacity 160ms ease,
        transform 200ms cubic-bezier(0.2, 0.8, 0.2, 1),
        visibility 0s linear 200ms;
    }

    #primary-links.force-visible {
      opacity: 1 !important;
      transform: translateY(0) scale(1) !important;
      pointer-events: auto !important;
      visibility: visible !important;
      display: flex !important;
    }

    #primary-links.mobile-menu-active {
      opacity: 1;
      transform: translateY(0) scale(1);
      pointer-events: auto;
      visibility: visible;
      display: flex;
      transition:
        opacity 180ms ease,
        transform 240ms cubic-bezier(0.2, 0.8, 0.2, 1),
        visibility 0s linear 0s;
    }

    #primary-links li {
      width: auto;
      flex: 0 0 auto;
    }

    #primary-links li a {
      width: auto;
      justify-content: center;
      text-align: center;
      padding-top: 0.375rem;
      padding-bottom: 0.375rem;
    }
  }

  /* Mid-width tweaks */
  @media (min-width: 640px) and (max-width: 900px) {
    #menu-wrapper .actions {
      padding-right: 0.5rem;
      gap: 0.25rem;
    }

    #menu-wrapper .actions li {
      flex: 0 0 auto;
    }

    .primary-links {
      gap: 0.25rem;
    }

    .primary-links a {
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }

    .logo {
      margin-right: 1.25rem;
    }
  }

  /* Specific width adjustments */
  @media (min-width: 700px) and (max-width: 780px) {
    .logo {
      margin-right: 0.5rem;
    }
    .primary-links {
      gap: 0.2rem;
    }
    .primary-links a {
      padding-left: 0.4rem;
      padding-right: 0.4rem;
    }
    #menu-wrapper .actions {
      gap: 0.2rem;
    }
  }

  nav ul li a:hover {
    color: rgb(var(--color-accent));
  }

  nav a.active {
    text-decoration: underline wavy;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
  }

  nav a.active svg {
    fill: var(--color-skin-accent);
  }

  nav button {
    padding: 0.25rem;
  }

  nav button svg {
    height: 1.5rem;
    width: 1.5rem;
    fill: currentColor;
    transition: fill 0.2s;
  }

  nav button svg:hover {
    fill: var(--color-skin-accent);
  }

  /* Hover pulse effect */
  .actions a::after,
  .actions button::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background-color: rgba(var(--color-accent), 0.2);
    border-radius: 50%;
    transform: translate(-50%, -50%) scale(0);
    opacity: 0;
    transition:
      transform 0.4s ease-out,
      opacity 0.4s ease-out;
    z-index: -1;
    pointer-events: none;
  }

  .actions a:hover::after,
  .actions button:hover::after {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 0;
    animation: headerPulse 1.2s ease-out infinite;
  }

  @keyframes headerPulse {
    0% {
      transform: translate(-50%, -50%) scale(0);
      opacity: 0.6;
    }
    100% {
      transform: translate(-50%, -50%) scale(1.8);
      opacity: 0;
    }
  }

  nav ul li:nth-last-child(2) a {
    width: auto;
  }

  nav ul li:nth-last-child(1),
  nav ul li:nth-last-child(2) {
    grid-column: span 1;
  }
</style>
